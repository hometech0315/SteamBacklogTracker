<MudThemeProvider Theme="@_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Game Not Found - Steam Backlog Tracker</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="not-found-container">
                <div class="not-found-content">
                    <h1 class="not-found-title">404 - Game Not Found</h1>
                    <p class="not-found-message">
                        The page you're looking for seems to have been uninstalled from your library.
                    </p>
                    <div class="not-found-actions">
                        <a href="/" class="gaming-btn">Return to Library</a>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<style>
    .not-found-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        padding: 2rem;
    }
    
    .not-found-content {
        text-align: center;
        max-width: 600px;
        background: var(--gaming-surface);
        padding: 3rem 2rem;
        border-radius: var(--gaming-border-radius-large);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: var(--gaming-shadow);
    }
    
    .not-found-title {
        font-size: 3rem;
        background: var(--steam-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
    }
    
    .not-found-message {
        color: var(--text-secondary);
        font-size: 1.125rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }
    
    .not-found-actions {
        margin-top: 2rem;
    }
</style>

