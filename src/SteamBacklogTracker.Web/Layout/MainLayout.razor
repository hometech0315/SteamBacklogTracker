@inherits LayoutComponentBase
<MudLayout>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="gaming-main-content">
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="gaming-container">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudScrollToTop>
    <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.KeyboardArrowUp" />
</MudScrollToTop>

@code {
    private bool _drawerOpen = true;
}
